<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main__page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="straightforwardapps.novtwentyone.Main_Page">

    <RadioGroup
        android:layout_width="500px"
        android:layout_height="300px"
        android:id="@+id/rgroup"
        >

    <RadioButton
        android:layout_width="500px"
        android:layout_height="100px"
        android:text="Black"
        android:id="@+id/rblack"
        android:onClick="rrb"/>

    <RadioButton
        android:layout_width="500px"
        android:layout_height="100px"
        android:text="Red"
        android:id="@+id/rred"
        android:onClick="rrb"/>

    </RadioGroup>


    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:background="#000000"
        android:id="@+id/lalapoop"
        >
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/mainpage"
        android:background="#e4d1d1"
        android:onClick="askback"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_marginLeft="5dp">
    </FrameLayout>
    </FrameLayout>


    <Space
        android:layout_below="@id/lalapoop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/spsp"/>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/mainpage0"
        android:background="#e4d1d1"
        android:layout_below="@+id/spsp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textColor="#333333"
            android:layout_marginTop="12dp"
            android:text="Color"
            android:id="@+id/col_name"
            />
    </FrameLayout>

    <Button
        android:text="OK"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/okb"
        android:onClick="chcol"
        android:layout_below="@+id/textb"
        android:layout_alignStart="@+id/textb"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp" />

    <EditText
        android:text="#333333"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textb"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lalapoop" />


</RelativeLayout>

